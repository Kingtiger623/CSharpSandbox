<Window x:Class="WpfPanels.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfPanels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Stretch">
            <Button Name="BtnOp1" Content="Operation 1" Height="25" Margin="5" MinWidth="50" HorizontalAlignment="Left"></Button>
            <Separator Width="200" Margin="20"></Separator>
            <Button Name="BtnQuit" Height="25" Margin="5" MinWidth="50" Content="Quit"></Button>

        </StackPanel>
        <Border BorderBrush="Black" BorderThickness="2" Margin="2">
            <FlowDocumentScrollViewer Margin="2"></FlowDocumentScrollViewer>
            <!--<TextBox Name="TxtInfo" DockPanel.Dock="Top" Margin="10" Text="Information area."></TextBox>-->
        </Border>
    </DockPanel>
</Window>
